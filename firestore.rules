
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Tickers can be read by anyone, but only created by signed-in users.
    // Updates and deletes are disallowed for now to prevent tampering.
    match /tickers/{tickerId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // Activities can be read by anyone (for the live feed).
    // A user can only create activities linked to their own user ID.
    match /activities/{activityId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if false;
    }

    // Users can only read and modify their own profile document.
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);

      // A user can only access their own portfolio sub-collection.
      match /portfolio/{holdingId} {
        allow read, write, delete: if isSignedIn() && isOwner(userId);
      }
    }
  }
}
