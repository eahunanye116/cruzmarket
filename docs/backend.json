
{
  "entities": {
    "ticker": {
      "title": "Ticker",
      "description": "Represents a meme ticker available for trading.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "slug": { "type": "string" },
        "tickerAddress": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" },
        "coverImage": { "type": "string" },
        "price": { "type": "number" },
        "supply": { "type": "number" },
        "marketCap": { "type": "number" },
        "chartData": { 
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "time": { "type": "string", "format": "date" },
              "price": { "type": "number" },
              "volume": { "type": "number" },
              "marketCap": { "type": "number" }
            }
          }
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "creatorId": { "type": "string" },
        "trendingScore": { "type": "number" },
        "volume24h": { "type": "number" },
        "priceChange24h": { "type": "number" }
      },
      "required": ["name", "slug", "tickerAddress", "description", "supply", "price", "createdAt", "marketCap", "creatorId", "icon", "coverImage"]
    },
    "activity": {
      "title": "Activity",
      "description": "Represents a single trading or creation event in the activity feed.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["BUY", "SELL", "CREATE", "DEPOSIT", "WITHDRAWAL"] },
        "tickerId": { "type": "string" },
        "tickerName": { "type": "string" },
        "tickerIcon": { "type": "string" },
        "value": { "type": "number" },
        "tokenAmount": { "type": "number" },
        "pricePerToken": { "type": "number" },
        "realizedPnl": { "type": "number" },
        "userId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "value", "createdAt", "userId"]
    },
    "userProfile": {
      "title": "User Profile",
      "description": "Stores public information about a user.",
      "type": "object",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "balance": { "type": "number" }
      },
      "required": ["email", "displayName", "balance"]
    },
    "portfolioHolding": {
      "title": "Portfolio Holding",
      "description": "Represents a user's holding of a specific ticker.",
      "type": "object",
      "properties": {
        "tickerId": { "type": "string" },
        "amount": { "type": "number" },
        "avgBuyPrice": { "type": "number" },
        "userId": { "type": "string" }
      },
      "required": ["tickerId", "amount", "avgBuyPrice", "userId"]
    },
    "platformSettings": {
      "title": "Platform Settings",
      "description": "Stores global settings for the platform.",
      "type": "object",
      "properties": {
        "signupEnabled": { 
          "type": "boolean",
          "description": "Controls whether new user registration is open."
        }
      },
      "required": ["signupEnabled"]
    },
    "savedTone": {
      "title": "Saved Tone",
      "description": "Represents a custom AI tone saved by a user for generating content.",
      "type": "object",
      "properties": {
        "tone": { "type": "string" },
        "userId": { "type": "string" }
      },
      "required": ["tone", "userId"]
    },
    "blogPost": {
      "title": "Blog Post",
      "description": "Represents a single blog post.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "slug": { "type": "string" },
        "content": { "type": "string", "description": "Markdown content of the post." },
        "excerpt": { "type": "string" },
        "coverImage": { "type": "string", "format": "uri" },
        "authorId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "isTrending": { "type": "boolean", "description": "Whether this post is featured in the 'Top Stories' section." }
      },
      "required": ["title", "slug", "content", "excerpt", "coverImage", "authorId", "createdAt", "updatedAt"]
    },
    "aiToneTrainingData": {
      "title": "AI Tone Training Data",
      "description": "A piece of text content used to train the AI's tone.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "A name for this training data set." },
        "content": { "type": "string", "description": "The text content for training." },
        "userId": { "type": "string", "description": "The user who added this data." }
      },
      "required": ["name", "content", "userId"]
    },
    "deposit": {
      "title": "Deposit",
      "description": "Represents a successful Paystack deposit transaction to prevent duplicates.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "amount": { "type": "number" },
        "processedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "amount", "processedAt"]
    },
    "withdrawalRequest": {
      "title": "Withdrawal Request",
      "description": "Represents a user's request to withdraw funds from their wallet.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "amount": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "completed", "rejected"] },
        "bankName": { "type": "string" },
        "accountNumber": { "type": "string" },
        "accountName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "processedAt": { "type": "string", "format": "date-time" },
        "rejectionReason": { "type": "string" }
      },
      "required": ["userId", "amount", "status", "bankName", "accountNumber", "accountName", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/tickers/{tickerId}": {
      "schema": { "$ref": "#/entities/ticker" },
      "description": "Collection of all available meme tickers."
    },
    "/activities/{activityId}": {
      "schema": { "$ref": "#/entities/activity" },
      "description": "Collection of all user activities for the live feed."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/userProfile" },
      "description": "Collection of all user profiles."
    },
    "/users/{userId}/portfolio/{holdingId}": {
      "schema": { "$ref": "#/entities/portfolioHolding" },
      "description": "Sub-collection for a user's portfolio holdings."
    },
    "/users/{userId}/savedTones/{toneId}": {
      "schema": { "$ref": "#/entities/savedTone" },
      "description": "Sub-collection for a user's saved AI tones."
    },
    "/settings/privacy": {
      "schema": { "$ref": "#/entities/platformSettings" },
      "description": "Stores privacy and registration settings for the platform."
    },
    "/blogPosts/{postId}": {
      "schema": { "$ref": "#/entities/blogPost" },
      "description": "Collection of all blog posts."
    },
    "/aiToneTrainingData/{dataId}": {
      "schema": { "$ref": "#/entities/aiToneTrainingData" },
      "description": "Collection of text samples to train the AI's tone."
    },
    "/deposits/{transactionReference}": {
      "schema": { "$ref": "#/entities/deposit" },
      "description": "Collection to track processed Paystack deposits by their reference ID to prevent double-crediting."
    },
    "/withdrawalRequests/{requestId}": {
        "schema": { "$ref": "#/entities/withdrawalRequest" },
        "description": "Collection of all user withdrawal requests."
    }
  }
}
    